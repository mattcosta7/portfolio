<p id="notice"><%= notice %></p>

<h1>Images From <%= @album.name %></h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Tags</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%=image_tag image.photo.url(:thumb)%></td>
        <td><%=image.tag_list%></td>
        <td><%= link_to 'Show', album_image_path(@album,image) %></td>
        <td><%= link_to 'Edit', edit_album_image_path(@album,image) %></td>
        <td><%= link_to 'Destroy', album_image_path(@album,image), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_album_image_path(@album) %>
