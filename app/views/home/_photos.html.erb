<div id='albums' class='albums section scrollspy'>
  <h2>Photo Albums</h2>
  <div class='row grid-row'>
    <div class='grid'>
      <% @albums.each_with_index do |album, index| %>
        <div class='col s12 m4'>
          <div class='card hoverable grid-item'>
            <div class='card-image'>
              <a target='_blank' data-flickr-embed="true"  href="<%=album[:href]%>" title="<%=album[:title]%>">
                <img  src='<%=album[:src]%>' alt="<%=album[:title]%>"></a>
            </div>
            <div class="card-action">
              <h6 class='a-name'><%=album[:title]%></h6>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>

<script async src="//embedr.flickr.com/assets/client-code.js" charset="utf-8"></script>
