<div id='skills' class='skills section scrollspy'>
  <div class='row'>
    <h2>Skills</h2>
    <% skills = [
      {icon_classes: "fa fa-server",
        chart_id: "backend-chart"
      },
      {
        icon_classes: "fa fa-desktop",
        chart_id: "frontend-chart"
      },
      {
        icon_classes: "fa fa-universal-access",
        chart_id: "other-chart"
      }
    ] %>
    <% skills.each do |skill_type| %>
      <div class='col s12 m4'>
        <h3 class='skill-type'><i class="<%=skill_type[:icon_classes]%>"></i></h3>
        <canvas id='<%=skill_type[:chart_id]%>' width="80%" height="100%"></canvas>
      </div>
    <%end%>
  </div>
</div>


<script>
var backendData = {
  labels: ['Ruby','Sinatra','Ruby-on-Rails','Node.js','SQLite3','PostgreSQL','ActiveRecord'],
  datasets: [
      {
          label: "Backend",
          backgroundColor: "rgba(179,181,198,0.2)",
          borderColor: "rgba(179,181,198,1)",
          pointBackgroundColor: "rgba(179,181,198,1)",
          pointBorderColor: "#fff",
          pointHoverBackgroundColor: "#fff",
          pointHoverBorderColor: "rgba(179,181,198,1)",
          data: [80, 75, 85, 65, 80, 85, 85]
      }
  ]
};

var frontEndData = {
  labels: ["Javascript","React.js","jQuery","AJAX","SCSS","HTML 5","CSS 3","Material Design","Bootstrap","AngularJS"],
  datasets: [
      {
          label: "Frontend",
          backgroundColor: "rgba(179,181,198,0.2)",
          borderColor: "rgba(179,181,198,1)",
          pointBackgroundColor: "rgba(179,181,198,1)",
          pointBorderColor: "#fff",
          pointHoverBackgroundColor: "#fff",
          pointHoverBorderColor: "rgba(179,181,198,1)",
          data: [75, 50, 85, 75, 86, 86, 80, 90, 90, 40]
      }
  ]
};

var otherData = {
  labels: ["Git","GitHub","Twilio","Google Maps","Vim","Sublime","Photoshop","Capture One"],
  datasets: [
      {
          label: "Other",
          backgroundColor: "rgba(179,181,198,0.2)",
          borderColor: "rgba(179,181,198,1)",
          pointBackgroundColor: "rgba(179,181,198,1)",
          pointBorderColor: "#fff",
          pointHoverBackgroundColor: "#fff",
          pointDot: false,
          pointLabelFontSize: 60,
          pointHoverBorderColor: "rgba(179,181,198,1)",
          data: [85, 90, 80, 85, 80, 90, 100,100]
      }
  ]
};

var backendCtx = document.getElementById('backend-chart');
var frontendCtx = document.getElementById('frontend-chart');
var otherCtx = document.getElementById('other-chart');
Chart.defaults.global.defaultFontColor = '#000';
Chart.defaults.global.defaultFontFamily = 'Roboto';
Chart.defaults.global.defaultFontSize = 40;
Chart.defaults.global.defaultFontStyle = 'bold';
Chart.defaults.global.legend.display = false;
Chart.defaults.global.legend.labels.fonztSize = 40;
Chart.defaults.scale.ticks.display = false;
Chart.defaults.scale.ticks.beginAtZero = true;

var myRadarChart1 = new Chart(backendCtx, {
    type: 'radar',
    data: backendData
});
var myRadarChart2 = new Chart(frontendCtx, {
    type: 'radar',
    data: frontEndData
});
var myRadarChart3 = new Chart(otherCtx, {
    type: 'radar',
    data: otherData
});
</script>
